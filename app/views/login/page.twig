<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Manouche</title>
        <meta charset="utf-8">
        <meta
        content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
        <!-- Bootstrap CSS -->
        <link
        crossorigin="anonymous" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" rel="stylesheet">
        <!-- Bootstrap core CSS -->
        <link
        href="/public/css/bootstrap.min.css" rel="stylesheet">
        <!-- Material Design Bootstrap -->
        <link
        href="/public/css/mdb.min.css" rel="stylesheet">
        <!-- Your custom styles (optional) -->
        <link href="/public/css/style.css" rel="stylesheet">
        <link href="/public/img/guitar.png" rel="shortcut icon"/>
        <link href="public/css/util.css" rel="stylesheet" type="text/css">
        <link href="public/css/loginmain.css" rel="stylesheet" type="text/css">
    </head>
    <body>

        {{ include('partials/nav.twig') }}


        <div class="image-background">
            <div class="container pt-5">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div
                            class="form-container card" style="border: none !important;">
                            <!-- Default form login -->
                            <form class="text-center border border-light p-5" method="POST" action="login/getin">

                                <p class="h4 mb-4">Entrar</p>

                                <!-- Email -->
                                <input
                                class="form-control mb-4" id="defaultLoginFormEmail" name="user" placeholder="E-mail ou usuário" type="text">

                                <!-- Password -->
                                <input class="form-control mb-4" id="defaultLoginFormPassword" name="password" placeholder="Senha" type="password">

                                <div class="d-flex justify-content-around">
                                    <div>
                                        <!-- Remember me -->
                                        <div class="custom-control custom-checkbox">
                                            <input class="custom-control-input" id="defaultLoginFormRemember" type="checkbox">
                                            <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
                                        </div>
                                    </div>
                                    <div>
                                        <!-- Forgot password -->
                                        <a class="link-purple" href="/forgotpassword">Esqueci minha senha</a>
                                    </div>
                                </div>

                                <!-- Sign in button -->
                                <button class="btn btn-info btn-block my-4" type="submit">Sign in</button>

                                <!-- Register -->
                                <p>Ainda não está cadastrado?
                                    <a class="link-purple" href="#">Registre-se</a>
                                </p>

                                <!-- Social login -->
                                <p>Ou entre usando:</p>

                                <a class="light-blue-text mx-2">
                                    <i class="fa fa-facebook-f link-purple"></i>
                                </a>
                                <a class="light-blue-text mx-2">
                                    <i class="fa fa-twitter link-purple"></i>
                                </a>
                                <a class="light-blue-text mx-2">
                                    <i class="fa fa-linkedin link-purple"></i>
                                </a>
                                <a class="light-blue-text mx-2">
                                    <i class="fa fa-github link-purple"></i>
                                </a>

                            </form>
                            <!-- Default form login -->
                        </div>
                    </div>
                    {% if errorMessage is defined %}
                        <p>{{ errorMessage }}</p>
                    {% endif %}
                </div>
            </div>
        </div>


        <script src="/public/js/jquery-3.4.0.min.js" type="text/javascript"></script>
        <!-- Bootstrap tooltips -->
        <script src="/public/js/popper.min.js" type="text/javascript"></script>
        <!-- Bootstrap core JavaScript -->
        <script src="/public/js/bootstrap.min.js" type="text/javascript"></script>
        <!-- MDB core JavaScript -->
        <script src="/public/js/mdb.min.js" type="text/javascript"></script>

        <script src="public/js/loginmain.js"></script>

    </body>
</html>
